<div id="formDiv">
    <h3>Register</h3>
    {{#if error}}
        <div class="error">
                OOOOOPS ERROR - you haven't filled in all the required fields properly
        </div>
    {{/if}}
    <form method="post" autocomplete="off">
        <p>* Required field</p>
        <div class="input">
            <label class="labelText" for="first">First Name <span>*</span></label>
            <input type="text" name="first" required>
        </div>
